{
  "extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict"],
  "compilerOptions": {
    "removeComments": true,
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "composite": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": ["src"]
}
